{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true, // accessing index must always check for undefined
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    ".env",
    "src/models/server.ts",
    "../frontend/src/components/PaginationControls.tsx",
    "../frontend/src/components/page.tsx",
    "_worker.ts"
  ],
  "exclude": ["node_modules/", "dist"]
}

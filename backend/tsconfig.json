{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true, // accessing index must always check for undefined
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", ".env"]
}
